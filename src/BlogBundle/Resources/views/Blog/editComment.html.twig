{% extends '::layout.html.twig' %}

{% block title %} Accueil {% endblock %}

{% block corps %}

	<div class="row">
		<div class="col-md-12">
			<div class="panel panel-default" style=" margin-top: 10px;">
				<div id="content" style="margin-top: 10px;">
					<center><h3> Modifier le commentaire <h3></center>

					{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

					<div class="form-group">
					{{ form_label(form.commentaire, "Texte", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
					{{ form_errors(form.commentaire) }}

						<div class="col-sm-4">
							{{ form_widget(form.commentaire, {'attr': {'class':'form-control'}}) }}
						</div>
					</div>

					

					<div class="form-group">
					{{ form_label(form.add, "Enregistrer", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

						<div class="col-sm-4">
							{{ form_widget(form.add, {'attr': {'class':'btn btn-primary pull-right'}}) }}
						</div>
					

					{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}